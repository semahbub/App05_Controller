
@{
    ViewData["Title"] = "UserData";
}

<h2 class="alert alert-info">User Data</h2>

<h5 class="alert alert-info">@ViewBag.msg</h5>

<br />
<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form asp-action="UserDataPost" asp-controller="Data" method="get">
            <label>Name of Person</label>
            <input type="text" name="Name" value="@ViewBag.name" class="form-control" />
            <label>Age of Person</label>
            <input type="number" name="Age" value="@ViewBag.age" class="form-control" />
            <label>Name of Country</label>
            <input type="text" name="Country" value="@ViewBag.country" class="form-control" />
            <br />
            <button type="submit" class="btn btn-primary">Save Data</button>
            <a asp-action="ShowUserData" asp-controller="Data" class="btn btn-success">Show User Data</a>
        </form>
    </div>
</div>